{% extends 'base.html.twig' %}

{% block title %}Episodes{% endblock %}

{% block body %}
    <h1>Episodes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ episode.name }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ episode.summary }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ episode.season }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ episode.duration }}</td>
            </tr>
            <tr>
                <th>Premiere</th>
                <td>{{ episode.premiere ? episode.premiere|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ episode.url }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ episode.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ episode.createdAt ? episode.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episodes_index') }}">back to list</a>

    <a href="{{ path('episodes_edit', {'id': episode.id}) }}">edit</a>

    {{ include('episodes/_delete_form.html.twig') }}
{% endblock %}
