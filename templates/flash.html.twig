<div class="container">
    <div class="row">
        <div class="col-sm-12">
            {% for label, messages in app.flashes(['warning', 'danger', 'success']) %}
                {% for message in messages %}
                    <h3 class="text-center alert-{{ label }}">
                        {{ message }}
                    </h3>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>
