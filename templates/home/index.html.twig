            let ratings = $('.stars_cards');
            Object.keys(ratings).forEach((rate,i)=>{
                console.log(rate)
                let score = rate.dataset.score;
                if(score > 0 && score < 2){
                    console.log(rate.children());

                }
            })
        })
    </script>
{% endblock %}
