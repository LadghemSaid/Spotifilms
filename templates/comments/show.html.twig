{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
    <h1>Comments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                {% if comment.validated %}
                    <th>Content</th>
                    <td>{{ comment.content }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Positive</th>
                <td>{{ comment.positive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                {% if is_granted ('ROLE_ADMIN') %}
                <th>Validated</th>
                <td>{{ comment.validated ? 'Yes' : 'No' }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comments_index') }}">back to list</a>

    <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comments/_delete_form.html.twig') }}
{% endblock %}
