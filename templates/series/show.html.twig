{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}
    <h1>Series</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ series.name }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ series.summary }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ series.language }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ series.score }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ series.status }}</td>
            </tr>
            <tr>
                <th>Premiere</th>
                <td>{{ series.premiere ? series.premiere|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ series.url }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ series.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ series.createdAt ? series.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('series_index') }}">back to list</a>

    <a href="{{ path('series_edit', {'id': series.id}) }}">edit</a>

    {{ include('series/_delete_form.html.twig') }}
{% endblock %}
